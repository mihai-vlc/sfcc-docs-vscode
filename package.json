{
    "name": "sfcc-docs-vscode",
    "displayName": "SFCC Docs in VSCode",
    "description": "Browse the SFCC documentation from VSCode.",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:sfcc-docs-vscode.openDocs",
        "onView:sfcc-docs-vscode.searchView"
    ],
    "icon": "resources/icon.jpg",
    "main": "./out/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ionutvmi/sfcc-docs-vscode"
    },
    "bugs": {
        "url": "https://github.com/ionutvmi/sfcc-docs-vscode/issues",
        "email": "ionutvmi@gmail.com"
    },
    "contributes": {
        "commands": [
            {
                "command": "sfcc-docs-vscode.openDocs",
                "title": "Open SFCC Docs"
            }
        ],
        "views": {
            "sfcc-docs-vscode": [
                {
                    "type": "webview",
                    "id": "sfcc-docs-vscode.searchView",
                    "name": "SFCC Docs"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "sfcc-docs-vscode",
                    "title": "SFCC Docs",
                    "icon": "./resources/icon.png"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "command": "sfcc-docs-vscode.openDocs",
                    "group": "sfcc-docs-vscode"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.70.0",
        "@types/vscode-webview": "^1.57.0",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "@vscode/test-electron": "^2.1.5",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.12",
        "cross-fetch": "^3.1.5",
        "normalize-url": "^4.5.1"
    }
}
